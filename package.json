{
  "name": "bikeshare",
  "version": "0.0.1",
  "description": "A bike share REST-API, designed with Node.js, Typescript, TypeORM, Postgres & Docker",
  "devDependencies": {
    "@types/faker": "^4.1.12",
    "@types/node": "^8.0.29",
    "faker": "^4.1.0",
    "ts-node": "3.3.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "bcrypt": "^3.0.6",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.25"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "db-kill": "docker kill some-pg && docker rm some-pg",
    "db-start": "docker run --name some-pg -p 5432:5432 -e POSTGRES_PASSWORD=secret -d postgres",
    "db-restart": "docker restart some-pg",
    "prod": "nodemon build/index.js",
    "build": "tsc"
  }
}
