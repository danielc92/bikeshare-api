{
  "name": "bikeshare",
  "version": "0.0.1",
  "description": "A bike share REST-API, designed with Node.js, Typescript, TypeORM, Postgres & Docker",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/faker": "^4.1.12",
    "@types/helmet": "0.0.47",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^26.0.7",
    "@types/morgan": "^1.9.1",
    "@types/node": "^8.0.29",
    "@types/supertest": "^2.0.10",
    "faker": "^4.1.0",
    "ts-jest": "^26.1.3",
    "ts-node": "3.3.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/redis": "^2.8.25",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "hpp": "^0.2.3",
    "jest": "^26.1.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^7.3.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.10",
    "supertest": "^4.0.2",
    "typeorm": "0.2.25"
  },
  "scripts": {
    "dev": "nodemon --files -r tsconfig-paths/register src/index.ts",
    "db-kill": "docker kill some-pg && docker rm some-pg",
    "db-start": "docker run --name some-pg -p 3008:5432 -e POSTGRES_PASSWORD=secret -d postgres",
    "db-restart": "docker restart some-pg",
    "db-console": "docker exec -it some-pg psql -U postgres",
    "prod": "nodemon build/index.js",
    "build": "tsc",
    "test": "node_modules/.bin/jest --watchAll --runInBand",
    "test-coverage": "node_modules/.bin/jest --watchAll --runInBand --coverage"
  }
}
